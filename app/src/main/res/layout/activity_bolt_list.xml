<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:weightSum="8"
    android:background="@drawable/background_gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BoltListActivity">

    <TextView
        android:text="Stud Bolt List"
        style="@style/daily_details_heading"
        ></TextView>

    <LinearLayout
        style="@style/date_heading"
        >

        <ImageView
            android:id="@+id/imgAdd"
            android:src="@drawable/add_material"
            android:layout_width="0dp"
            android:padding="5dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            ></ImageView>

        <TextView
            android:id="@+id/tvDate"
            style="@style/date_text"
            ></TextView>

    </LinearLayout>

    <LinearLayout
        style="@style/linear_head"
        >

        <TextView
            android:text="SrNo"
            style="@style/head_text"
            android:layout_weight="1"
            ></TextView>

        <TextView
            android:text="Bolt Type"
            style="@style/head_text"
            android:layout_weight="2"
            ></TextView>

        <TextView
            android:text="Qty"
            style="@style/head_text"
            android:layout_weight="2"
            ></TextView>

        <TextView
            android:text="Edit"
            style="@style/head_text"
            android:layout_weight="1"
            ></TextView>


    </LinearLayout>

    <ListView
        android:id="@+id/listBolt"
        style="@style/daily_details_listview"
        ></ListView>

</LinearLayout>