<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:minWidth="250dp"
    android:minHeight="320dp"
    android:alpha="0.99"
    android:background="@drawable/popup_add_box"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:weightSum="7.2"
        android:layout_weight="1"
        >

        <EditText
            android:id="@+id/etSrno"
            android:hint="Srno"
            android:inputType="number"
            android:gravity="center"
            android:layout_marginTop="10dp"
            style="@style/linear_style_add"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            ></EditText>

        <EditText
            android:id="@+id/etName"
            android:hint="Name"
            android:gravity="center"
            android:inputType="text"
            style="@style/linear_style_add"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            ></EditText>

        <EditText
            android:id="@+id/etPresent"
            android:hint="Present"
            android:inputType="text"
            android:gravity="center"
            style="@style/linear_style_add"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            ></EditText>

        <EditText
            android:id="@+id/etInTime"
            android:hint="In Time"
            android:gravity="center"
            android:inputType="time"
            style="@style/linear_style_add"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            ></EditText>

        <EditText
            android:id="@+id/etOutTime"
            android:hint="Out Time"
            android:gravity="center"
            style="@style/linear_style_add"
            android:inputType="time"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            ></EditText>

        <EditText
            android:id="@+id/etRate"
            android:hint="Rate"
            android:gravity="center"
            style="@style/linear_style_add"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            ></EditText>

        <Button
            android:id="@+id/btAdd"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:inputType="numberDecimal"
            android:background="@drawable/button3"
            android:layout_marginRight="20dp"
            android:text="Add Worker"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            ></Button>

    </LinearLayout>

</LinearLayout>