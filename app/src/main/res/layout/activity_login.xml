<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/login_gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="7"
    tools:context=".LoginActivity">

    <ImageView
        android:src="@drawable/logo"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        ></ImageView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            app:cardCornerRadius="80sp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:alpha="0.8"
            android:paddingTop="60dp"
            android:fadingEdge="none"
            android:paddingBottom="70dp"
            android:layout_marginBottom="50dp"
            app:cardElevation="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2.8"
                android:alpha="0.95"
                android:background="@drawable/login_edittext"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_weight="0.8"
                    >

                    <TextView
                        android:text="Company : "
                        android:gravity="center|end"
                        style="@style/login_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        ></TextView>

                    <Spinner
                        android:id="@+id/sp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        ></Spinner>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    style="@style/login_text"
                    android:text="Signin to start your session"
                    android:gravity="center"
                    ></TextView>

                <EditText
                    android:id="@+id/etPhone"
                    android:hint="contact number"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:alpha="0.8"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:inputType="phone"
                    android:background="@drawable/profile_edittext"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    ></EditText>

                <CheckBox
                    android:id="@+id/cbRemember"
                    android:text="Remember Me"
                    style="@style/login_text"
                    android:backgroundTint="#61584C"
                    android:shadowColor="#61584C"
                    android:textColorHint="#61584C"
                    android:searchResultHighlightColor="#61584C"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    ></CheckBox>

                <Button
                    android:id="@+id/btSignIn"
                    android:text="Sign In"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:alpha="0.8"
                    android:background="@drawable/button1"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="40dp"
                    android:layout_weight="0.4"
                    ></Button>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

</LinearLayout>