<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="datePicker_style" parent="android:Widget.Material.DatePicker">
        <item name="android:headerBackground">#8D7B68</item>
        <item name="android:headerDayOfMonthTextAppearance">@color/white</item>
        <item name="android:calendarTextColor">@color/text</item>
    </style>

    <style name="button_style">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="customDatePicker_style" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/text</item>
        <item name="android:datePickerStyle">@style/datePicker_style</item>
        <item name="android:dayOfWeekBackground">@color/text</item>
    </style>

</resources>