<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#3C707C</item>
        <item name="colorPrimaryDark">#76ABAE</item>
        <item name="colorAccent">#164863</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:listDivider">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="login_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="otp_text">
        <item name="android:textColor">#526D82</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="site_text">
        <item name="android:textColor">#2E4D4A</item>
    </style>

    <style name="daily_text">
        <item name="android:textColor">#5C3C3B</item>
    </style>

    <style name="company_text">
        <item name="android:textSize">27dp</item>
        <item name="android:textColor">#27374D</item>
        <item name="android:alpha">0.8</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="head_text">
        <item name="android:gravity">center</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="list_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/profile_edittext</item>
    </style>

    <style name="list_text2">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/profile_edittext</item>
        <item name="android:enabled">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:clickable">false</item>
        <item name="android:inputType">none</item>
    </style>

    <style name="add_attendance_box">
        <item name="android:alpha">0.85</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:background">@drawable/profile_edittext</item>
        <item name="android:src">@drawable/attendance</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.8</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="date_text">
        <item name="android:textColor">#164863</item>
        <item name="android:text">Date : </item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">bottom|end</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">4.2</item>
    </style>

    <style name="linear_head">
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">#A0C9C3</item>
        <item name="android:weightSum">6</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.7</item>
    </style>

    <style name="daily_details_heading">
        <item name="android:gravity">center</item>
        <item name="android:textSize">25dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_weight">0.9</item>
        <item name="android:textColor">#27374D</item>
        <item name="android:alpha">0.8</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="daily_details_listview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_weight">5.9</item>
    </style>

    <style name="date_heading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">5</item>
        <item name="android:layout_weight">0.55</item>
    </style>

</resources>