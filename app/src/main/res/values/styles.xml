<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="login_text">
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="otp_text">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="site_text">
        <item name="android:textColor">#2E4D4A</item>
    </style>

    <style name="daily_text">
        <item name="android:textColor">#5C3C3B</item>
    </style>

    <style name="company_text">
        <item name="android:textSize">27dp</item>
        <item name="android:textColor">@color/company</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="head_text">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="list_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>