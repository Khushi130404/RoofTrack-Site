<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="linear_style">
        <item name="android:background">@drawable/profile_edittext</item>
        <item name="android:alpha">0.6</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>

    <style name="tv_style">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:gravity">center|start</item>
    </style>

    <style name="et_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="background">@drawable/profile_edittext</item>
    </style>

</resources>